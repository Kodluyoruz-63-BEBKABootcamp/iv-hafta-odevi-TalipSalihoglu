@using iv_hafta_odevi.Models
@model Message
@{
    ViewData["Title"] = "Message";
}

    <form asp-action="Message">
        <div class="form-group">
            <label asp-for="@Model.MessageId">Message Id</label>
            <input asp-for="@Model.MessageId" class="form-control" placeholder="Message id">
        </div>

        <div class="form-group">
            <label asp-for="@Model.message">Message</label>
            <textarea asp-for="@Model.message" class="form-control" rows="3"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Message" class="btn btn-primary" />
        </div>
    </form>