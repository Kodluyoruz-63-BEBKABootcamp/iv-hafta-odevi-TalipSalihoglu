@using iv_hafta_odevi.Models
@model List<Book>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Book ID</th>
                <th>Book Name</th>
                <th>Book Author</th>
            </tr>
        </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.BookId</td>
                    <td>@item.Name</td>
                    <td>@item.Author</td>
                </tr>
            }
    </table>
